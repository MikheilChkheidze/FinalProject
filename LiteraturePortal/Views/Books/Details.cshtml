@model LiteraturePortal.Models.Book
@{
    ViewData["Model"] = "Create";
}

<br />
<h2>Book Details</h2>
<hr />


    <div class="form-border">
        <fieldset disabled>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ISBN" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="ISBN" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Author" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Author" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Title" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Title" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Genre" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Genre" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Year" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Year" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Pages" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Pages" class="form-control" />
                    </div>
                </div>

            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Language" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Language" class="form-control" />
                    </div>
                </div>

            </div>
        </fieldset>
        <br />
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Edit</a>
            <a asp-action="Index" asp-route-userId="@Model.UserId" class="btn btn-sm btn-success">Back to List</a>
        </div>
    </div>

